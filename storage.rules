rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Public Media
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Draft/Private Media
    match /draft/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
